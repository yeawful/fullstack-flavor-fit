model Ingredient {
  id String @id @default(cuid())

  name    String
  iconUrl String  @map("icon_url")
  content String
  price   Decimal

  recipesIngridient RecipeIngredient[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("ingredients")
}

enum Unit {
  GRAM
  MILLILITER
  PIECE
  TEASPOON
  TABLESPOON
  CLOVES
}
